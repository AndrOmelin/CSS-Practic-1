
       <header class="header">
            <div class="col-3">
                 {{> logo}}
            </div>{{!-- <div class="col-3"> --}}

              <nav class="header_nav">
                   <div class="header_nav_right">
                        {{> nav list=header}}
                   </div>
              </nav>{{!-- <nav class="header_nav"> --}}
       </header>

       <main class="main">
          {{#with info}}
            <div class="info">
                 <h1 class="info_title">
                     {{title}}
                 </h1>

                 <div class="info_description_container">
                   <p class="info_description">
                      {{description}}
                   </p>
                 </div>  
            </div>{{!-- <div class="info"> --}}
          {{/with}}

          {{#with form}}
            <div class="form">
                     <form class="form_input_list">
                           {{#each inputs}}
                                   <input type="{{type}}"
                                   placeholder="{{placeholder}}"
                                   class="form_input"
                                   name="{{name}}"
                                   id="form-input-{{id}}"/>
                           {{/each}}
                     </form> 

                     <div class="form_checkbox">
                          <input type="checkbox" name="{{checkbox.name}}">
                          <label for="">{{checkbox.label}}</label>
                     </div>
                   
                     <button type="submit" class="form_button">{{button}}</button>
                     <div class="formBorderBottom"></div>
                 <p class="form_info">{{info}}</p>
            </div>
          {{/with}}
       </main>

       <div class="updates">
          {{#with updates}}

            <div class="updates_title">
                 <h2>{{title}}</h2>
            </div>
                <div class="updates_list">
                     {{#each list}}
                             {{> updates–°ard data=this}}
                     {{/each}}
                </div>
                {{#with show_all}}
                  <div class="show_all">
                       <a class="show_all_link" href="{{url}}">{{text}}</a>
                  </div>
                {{/with}}  
          {{/with}}  
       </div>{{!-- <div class="updates"> --}}

       <div class="expirience">
            {{#with expirience}}
            <div class="expirience_title">
                 <h5>{{title}}</h5>    
            </div>

            <div class="badge_hot">
                 <h6 class="badge_title">
                     {{badge}}
                 </h6>
            </div>

            <div class="expirience_list">
              {{#each list}}
                {{> cardExpirience data=this}}
              {{/each}}
            </div>

            {{!-- <div class="badge_hot">
                 <h6 class="badge_title">
                     {{badge}}
                 </h6>
            </div> --}}

            {{/with}}
       </div> {{!-- <div class="expirience"> --}}
         
         
         <footer class="row footer">
          {{!-- {{> divider}} --}}
          {{!-- <br> --}}
           <div class="col-3">
                {{> logo}}
                <span class="footer-copyright">Copyright 2023-2024</span>
           </div> {{!-- <div class="col-3"> --}} 
            {{#each footer}}
              <div class="col-3">
                   <span class="footer_title">{{title}}</span>
                   {{> nav list=links isVertical=true}}
              </div>
            {{/each}}
         </footer>
    