
       <header class="header">
            <div class="col-3">
                 {{> logo}}
            </div>{{!-- <div class="col-3"> --}}

              <nav class="header_nav">
                   <div class="header_nav_right">
                        {{> nav list=header}}
                   </div>
              </nav>{{!-- <nav class="header_nav"> --}}
       </header>

       <main class="main">
          {{#with messages}}
            <div class="messages">
                 <h1 class="messages_title">
                     {{title}}
                 </h1>
                  
                  {{#each list}}
                       <div class="msg">
                            <strong class="msg_name">{{name}}</strong>
                            <p class="msg_text">{{message}}</p>
                            <span class="msg_day">{{day}}</span>                        
                       </div>
                  {{/each}}

                 <a href="#" class="messages_link">All messages</a>    
            </div>
          {{/with}}

          {{#with form}}
            <div class="form">
                 <h2 class="form_title">{{title}}</h2>

                     <form class="form_input_list">
                           {{#each inputs}}
                                   <input type="{{type}}"
                                   placeholder="{{placeholder}}"
                                   class="form_input"
                                   name="{{name}}"
                                   id="form-input-{{id}}"/>
                           {{/each}}
                     </form> 

                     <div class="form_checkbox">
                          <input type="checkbox" name="{{checkbox.name}}">
                          <label for="">{{checkbox.label}}</label>
                     </div>
                   
                     <button type="submit" class="form_button">{{button}}</button>
                 <p class="form_info">{{info}}</p>
            </div>
          {{/with}}
       </main>

       <div class="advantages">
            {{#each advantages}}
              {{> cardAdvantages data=this}}
            {{/each}}
       </div>{{!-- <div class="cards"> --}}

         <footer class="row footer">
          {{!-- {{> divider}} --}}
          {{!-- <br> --}}
           <div class="col-3">
                {{> logo}}
                <span class="footer-copyright">Copyright 2023-2024</span>
           </div> {{!-- <div class="col-3"> --}} 
            {{#each footer}}
              <div class="col-3">
                   <span class="footer_title">{{title}}</span>
                   {{> nav list=links isVertical=true}}
              </div>
            {{/each}}
         </footer>
    